<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/frameTopStepFirst"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/background_menu">

        <ImageButton
            android:id="@+id/imageButtomBackStepFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:background="@color/background_menu"
            app:srcCompat="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/textViewStepFirst"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_gravity="center"
            android:background="@color/background_menu"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/textView_goalsStepFirst_first"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEndStepFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="25dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStartStepFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="25dp" />

        <TextView
            android:id="@+id/textViewGoalsStepFirstTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/textView_goalsStepFirst_title"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/guidelineStartStepFirst"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewGoalsStepFirstDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:lines="3"
            android:minLines="3"
            android:text="@string/textView_goalsStepFirst_description"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/guidelineEndStepFirst"
            app:layout_constraintStart_toStartOf="@id/guidelineStartStepFirst"
            app:layout_constraintTop_toBottomOf="@+id/textViewGoalsStepFirstTitle" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewGoalsStepFirst"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="@id/guidelineEndStepFirst"
            app:layout_constraintStart_toStartOf="@id/guidelineStartStepFirst"
            app:layout_constraintTop_toBottomOf="@+id/textViewGoalsStepFirstDescription">

            <FrameLayout
                android:id="@+id/framePicGoalsStepFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <ImageView
                android:id="@+id/imageViewGoalsStepFirst"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/ic_photo_default"
                android:scaleType="centerCrop"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonGoalsStepFirstChoosePic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="55dp"
                    android:paddingEnd="55dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/text_blue"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/button_goalsStepFirst_choosePic"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    />
            </FrameLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextInputGoalsStepFirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:hint="@string/hint_goalsStepFirst"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </com.google.android.material.card.MaterialCardView>





        <TextView
            android:id="@+id/textViewGoalsStepSecondTitleSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/textView_goalsStepFirst_title_second"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/guidelineStartStepFirst"
            app:layout_constraintTop_toBottomOf="@+id/cardViewGoalsStepFirst" />

        <TextView
            android:id="@+id/textViewGoalsStepSecondDescriptionSecond"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:lines="3"
            android:minLines="3"
            android:text="@string/textView_goalsStepFirst_description_second"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/guidelineEndStepFirst"
            app:layout_constraintStart_toStartOf="@id/guidelineStartStepFirst"
            app:layout_constraintTop_toBottomOf="@+id/textViewGoalsStepSecondTitleSecond" />


        <TextView
            android:id="@+id/textViewGoalsStepSecondData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/textView_goalsStepFirst_data"
            app:layout_constraintStart_toStartOf="@+id/guidelineStartStepFirst"
            app:layout_constraintTop_toBottomOf="@+id/textViewGoalsStepSecondDescriptionSecond" />

        <Button
            android:id="@+id/buttonGoalsStepSecondChooseDat"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEndStepFirst"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guidelineStartStepFirst"
            app:layout_constraintTop_toBottomOf="@+id/textViewGoalsStepSecondData"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonGoalsStepFirstNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/text_blue"
            android:fontFamily="sans-serif-medium"
            android:text="@string/button_goalsStepFirst_next"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/guidelineEndStepFirst"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guidelineStartStepFirst"
            app:layout_constraintTop_toBottomOf="@+id/buttonGoalsStepSecondChooseDat" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>